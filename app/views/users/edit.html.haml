#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit Account
      %h5 アカウントの編集
      = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn', style: "text-decoration:none;"
      = link_to "トップページに戻る", :back, class: 'btn', style: "text-decoration:none;"
    .account-page__inner--right.user-form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .field
          .field-label
            = f.label :name
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label "メールアドレス"
          .field-input
            = f.email_field :email
        .field
          .field-label
            = f.label "パスワード"
            %i (変更したくない場合は、空白のままにしておいてください)
          .field-input
            = f.password_field :password
        .field
          .field-label
            = f.label "確認用パスワード"
          .field-input
            = f.password_field :password_confirmation
        .field
          .field-label
            = f.label "現在のパスワード"
            %i (変更には現在のパスワードの入力が必要です)
          .field-input
            = f.password_field :current_password
        .actions
          = f.submit "Update", class: 'btn'

